@model IEnumerable<Template>

<h2>Available user groups</h2>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NotificationName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NotificationText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NotificationPriority)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationPriority)
            </td>
            <td>
                <a style="margin-right: 10px" asp-controller="Templates" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                <a asp-controller="Templates" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>

</table>

<div class="text-center">
    <h1 class="display-4">Template options</h1>
    <div>
        <a class="block" asp-controller="Templates" asp-action="AddTemplate"> Add Template </a>
    </div>
</div>

<!-- CSS part -->

<style>
.block {
  display: block;
  width: 100%;
  border: none;
  background-color: #4CAF50;
  color: white;
  padding: 14px 28px;
  font-size: 16px;
  cursor: pointer;
  text-align: center;
  margin-bottom: 5px;
  margin-top: 5px;
}

.block:hover {
  background-color: #ddd;
  color: black;
}
</style>